<%= render "shared/header" %>

<div class="login-main">

  <%= form_with(model: @user, url: user_session_path, class: "login-form") do |f| %>

    <div class="login-title">ログイン</div>

    <div class="login-field">
      <%= f.email_field :email, class:"login-email", placeholder: "メールアドレスを入力"%>
    </div>

    <div class="login-field">
      <%= f.password_field :password, class:"login-password", placeholder: "パスワードを入力"%>
    </div>

    <div class="login-action">
      <%= f.submit "ログイン", class:"login-btn"%>
    </div>

  <% end %>

</div>

<%= render "shared/footer" %>