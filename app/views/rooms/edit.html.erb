<%= render "shared/header" %>

<h1> Room編集ページ </h1>

<%= form_with model:@room, local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="new-rooms">
    <div class="weight-bold-text">
      Room名
    </div>
    <%= f.text_area :name, class:"rooms-text", id:"room-name", placeholder:"Room名（必須 40文字まで)", maxlength:"40" %>
  </div>
  <div class="edit-btn-contents">
    <%= f.submit "変更する" ,class:"edit-btn" %>
    <%=link_to 'もどる', room_comments_path(@room.id), class:"back-btn" %>
  </div>

<% end %>