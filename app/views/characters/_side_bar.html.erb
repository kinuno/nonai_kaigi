<div class="roomname-contents">
  <div class="room-comments-title">
    <% if @room.name != "" %>
      <%= link_to "#{@room.name}", room_comments_path(@room.id), class:"room-title-link" %>
    <% else %>
      <%= link_to "#{@sidebarroom.name}", room_comments_path(@room.id), class:"room-title-link" %>
    <% end %>
  </div>
</div>

<div class='character-contents'>
    <h2 class='characters-index'>Characters</h2>
    <ul class='characters-lists'>
        <% @characters.each do |character|%>
          <li class='character-list'>
            <%= link_to "#{character.name}", room_character_path(@room.id, character.id), class:"character-link" %> 
          </li>
        <% end %>
    </ul>
</div>